{
  "name": "pokemon-collector",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "homepage": "https://github.com/RofiSyahrul/pokemon-collector",
  "scripts": {
    "dev": "concurrently -k -p \"[{name} @ {time}]\" -n \"Next,Apollo\" -c \"cyan.bold,green.bold\" \"TAILWIND_MODE=watch next dev -p 2345\" \"yarn generate:watch\"",
    "build": "next build",
    "build:analyze": "ANALYZE=true yarn build",
    "start": "next start",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:fix": "yarn lint:css:fix && yarn lint:ts:fix",
    "lint:css": "stylelint styles/**/*.css components/**/*.css --color",
    "lint:css:fix": "yarn lint:css --fix",
    "lint:ts": "eslint . --ext .js,.jsx,.ts,.tsx -f table",
    "lint:ts:fix": "yarn lint:ts --fix",
    "generate": "apollo client:codegen --target=typescript --tsFileExtension=d.ts --no-addTypename --outputFlat src/types  --config=apollo.config.js",
    "generate:watch": "yarn generate -- --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.3.6",
    "clsx": "^1.2.1",
    "graphql": "^15.4.0",
    "immer": "^8.0.0",
    "next": "10.0.3",
    "next-pwa": "^5.0.0",
    "nprogress": "^0.2.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@next/bundle-analyzer": "^10.0.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/node": "^14.14.14",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "apollo": "^2.32.0",
    "autoprefixer": "^10.4.13",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "^8.4.19",
    "prettier": "^2.2.1",
    "stylelint": "^14.15.0",
    "stylelint-config-recommended": "^9.0.0",
    "tailwind-scrollbar": "^2.0.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint -f table"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
